<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gamesFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/games_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/fragment_games"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/teama_imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="220dp"
        android:src="@drawable/ic_launcher_round"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="26dp"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/teamb_imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/teama_imageView"
        android:layout_marginEnd="25dp"
        android:src="@drawable/ic_launcher_round"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp" />

    <TextView
        android:textSize="12dp"
        android:id="@+id/teamb_textview"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/teamb_imageView"
        android:layout_below="@+id/teama_imageView"
        android:layout_marginStart="-7dp"
        android:text="TNL Elite"
        android:textAlignment="center"
        android:textColor="@color/colorWhite" />

    <TextView
        android:textSize="15dp"
        android:id="@+id/date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="228dp"
        android:text="April 21 2018"
        android:textAlignment="center"
        android:textColor="@color/colorWhite" />

    <TextView
        android:textSize="12dp"
        android:id="@+id/time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="264dp"
        android:text="10:00 AM"
        android:textColor="@color/colorWhite" />

    <TextView
        android:textSize="12dp"
        android:id="@+id/teama_textview"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/teama_imageView"
        android:layout_below="@+id/teama_imageView"
        android:layout_marginStart="-12dp"
        android:text="Tropang KL"
        android:textAlignment="center"
        android:textColor="@color/colorWhite" />

</RelativeLayout>